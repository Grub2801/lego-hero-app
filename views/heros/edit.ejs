<section class="success" id="show">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Edit Superhero</h2>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <fieldset>
          <form action="/legoheros/<%= hero.id %>?_method=PUT%>" method="POST">
            <div class="form-group col-xs-12">
              <p><input name="hero[character]" class="form-control" value="<%= hero.character %>" placeholder="Character"/></p>
            </div>
            <div class="form-group col-xs-12">
              <p><input name="hero[full_name]"  class="form-control" value="<%= hero.full_name %>" placeholder="Full name"/></p>
            </div>
            <div class="form-group col-xs-12">
              <p><input name="hero[occupation]"  class="form-control" value="<%= hero.occupation %>" placeholder="Occupation"/></p>
            </div>
            <div class="form-group col-xs-12">
              <p><input name="hero[power]"  class="form-control" value="<%= hero.power %>" placeholder="Power"/></p>
            </div>
            <div class="form-group col-xs-12">
              <p><input name="hero[photoUrl]"  class="form-control" value="<%= hero.photoUrl %>" placeholder="Photo URL"/></p>
            </div>
            <div class="form-group col-xs-12 text-center">
              <button class="btn btn-lg btn-outline">Update Superhero</button>
            </div>
          </form>
        </fieldset>
      </div>
    </div>
  </div>
</section>
