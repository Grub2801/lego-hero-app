<fieldset>
  <legend>Edit Superhero</legend>

  <form action="/legoheros/<%= hero.id %>?_method=PUT%>" method="POST">
    <div class="form-group col-md-4">
      <input name="hero[character]" class="form-control" value="<%= hero.character %>" placeholder="Character"/>
    </div>
    <div class="form-group col-md-4">
      <input name="hero[full_name]"  class="form-control" value="<%= hero.full_name %>" placeholder="Full name"/>
    </div>
    <div class="form-group col-md-4">
      <input name="hero[occupation]"  class="form-control" value="<%= hero.occupation %>" placeholder="Occupation"/>
    </div>
    <div class="form-group col-md-4">
      <input name="hero[power]"  class="form-control" value="<%= hero.power %>" placeholder="Power"/>
    </div>
    <div class="form-group col-md-4">
      <button class="btn btn-success col-md-12">Update Superhero</button>
    </div>
  </form>
</fieldset>